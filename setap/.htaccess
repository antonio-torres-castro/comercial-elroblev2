# .htaccess DEBUG OPTIMIZADO - Carpeta /setap/
# Renombra a .htaccess cuando subas al servidor
# Compatible con Apache 2.4 (Windows y Linux)

<IfModule mod_rewrite.c>
    RewriteEngine On
    #RewriteBase /setap/
    
    # ===== OPTIMIZACION PARA DEBUG =====
    # Permitir acceso directo a carpeta debug sin redireccion
    RewriteCond %{REQUEST_URI} ^/setap/debug/
    RewriteRule ^(.*)$ - [L]
    
    # Permitir acceso a carpeta logs (solo desde referer del debug)
    RewriteCond %{REQUEST_URI} ^/setap/logs/
    RewriteCond %{HTTP_REFERER} /setap/debug/
    RewriteRule . - [L]
    
    # Redirigir todo lo demas a la carpeta public/
    RewriteCond %{REQUEST_URI} !^/setap/debug/
    RewriteCond %{REQUEST_URI} !^/setap/public/
    RewriteCond %{REQUEST_URI} !^/setap/logs/
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>

# ===== CONFIGURACION GENERAL =====
# Evitar listado de directorios
Options -Indexes

# Priorizar index.php
DirectoryIndex index.php index.html

# ===== PROTECCION DE ARCHIVOS SENSIBLES =====
<FilesMatch "\.(env|ini|log|sh|bak|config|sql|htaccess_debug|htaccess_logs|htaccess_debug_optimized)$">
    <RequireAll>
        Require all denied
    </RequireAll>
</FilesMatch>

# ===== RESTRICCIONES DE IP PARA DEBUG (FUNCIONA EN .HTACCESS) =====
# Solo para carpeta debug/ - usar con cuidado
<FilesMatch "^(debug|.*debug.*|.*debug.*)$">
    <RequireAll>
        # Permitir solo IPs especificas
        Require ip 127.0.0.1
        Require ip localhost
        Require ip 181.72.88.67
    </RequireAll>
</FilesMatch>

# ===== HEADERS DE SEGURIDAD (SI mod_headers ESTA DISPONIBLE) =====
<IfModule mod_headers.c>
    # Headers basicos de seguridad
    Header always set X-Frame-Options SAMEORIGIN
    Header always set X-Content-Type-Options nosniff
    Header always set X-XSS-Protection "1; mode=block"
    
    # Headers especificos para modo debug
    Header set X-Debug-Panel "enabled"
    Header set X-Debug-Active "true"
    Header set X-Tools "web-debug-enabled"
    Header unset X-Powered-By
</IfModule>

# ===== PROTECCION CONTRA ATAQUES =====
<IfModule mod_rewrite.c>
    # Bloquear intentos de acceso a archivos de sistema
    RewriteRule ^(.*)/(wp-config\.php|xmlrpc\.php|wp-login\.php|wp-admin/admin-ajax\.php)$ - [F,L]
    
    # Bloquear acceso a directorios sensibles
    RewriteRule ^(.*)/(vendor|cache|tests|docs)/?$ - [F,L]
    
    # Bloquear consultas SQL directas en URL
    RewriteCond %{QUERY_STRING} (\<|%3C).*script.*(\>|%3E) [NC,OR]
    RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} _REQUEST(=|\\[|\%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} \<.+\> [OR]
    RewriteCond %{QUERY_STRING} (SELECT|INSERT|UPDATE|DELETE|DROP|CREATE) [NC,OR]
    RewriteCond %{QUERY_STRING} (UNION|SELECT|INSERT|UPDATE|DELETE|DROP|CREATE) [NC,OR]
    RewriteCond %{QUERY_STRING} concat [NC]
    RewriteRule ^(.*)$ - [F,L]
</IfModule>

# ===== CHARSET Y CODIFICACION =====
AddDefaultCharset UTF-8

# ===== CACHE PARA ARCHIVOS ESTATICOS =====
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType text/x-javascript "access plus 1 month"
    ExpiresByType application/x-shockwave-flash "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresDefault "access plus 2 days"
</IfModule>

# ===== COMPRESION PARA MEJOR RENDIMIENTO =====
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# PHP Handler - Activar segun entorno
<IfModule mime_module>
  ## PHP Handler (production - cPanel EasyApache)
  #AddHandler application/x-httpd-ea-php83 .php .php8 .phtml
  
  # PHP Handler (local - Apache estandar Windows)
  AddHandler application/x-httpd-php .php .php8 .phtml
</IfModule>

# ===== NOTA IMPORTANTE =====
# Este archivo corregido NO usa directivas <Directory>
# que son las que causan el Error 500
# 
# Despues de terminar debugging:
# 1. Cambiar IPs en las reglas de Require ip
# 2. Eliminar headers de debug (X-Debug-*, X-Tools, etc.)
# 3. Eliminar carpeta /setap/debug/ completamente
# 4. Restablecer configuraci√≥n original si es necesario
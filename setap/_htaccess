# .htaccess en la raiz de /setap/
# Redirige todo el trafico a la carpeta public/
# Configuracion identica entre produccion y local

<IfModule mod_rewrite.c>
    RewriteEngine On
    # RewriteBase /setap/
    
    # Redirigir todo a la carpeta public/
    RewriteCond %{REQUEST_URI} !^/setap/public/
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>

# Evitar listado de directorios
Options -Indexes

# Bloquear acceso a archivos sensibles
<FilesMatch "\.(env|ini|log|sh|bak|config|sql)$">
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
</FilesMatch>

# PHP Handler - Activar segun entorno
<IfModule mime_module>
  ## PHP Handler (production - cPanel EasyApache)
  #AddHandler application/x-httpd-ea-php83 .php .php8 .phtml
  
  # PHP Handler (local - Apache estandar Windows)
  AddHandler application/x-httpd-php .php .php8 .phtml
</IfModule>

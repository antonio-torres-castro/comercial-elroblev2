# .htaccess DEBUG OPTIMIZADO - Carpeta /setap/
# Renombra a .htaccess cuando subas al servidor
# IMPORTANTE: Antes de usar, reemplaza "TU_IP_PUBLICA_AQUI" con tu IP real

<IfModule mod_rewrite.c>
    RewriteEngine On
    # RewriteBase /setap/
    
    # ===== OPTIMIZACIÓN PARA DEBUG =====
    # Permitir acceso directo a carpeta debug sin redirección
    RewriteCond %{REQUEST_URI} ^/setap/debug/
    RewriteRule ^(.*)$ - [L]
    
    # Redirigir todo lo demás a la carpeta public/
    RewriteCond %{REQUEST_URI} !^/setap/debug/
    RewriteCond %{REQUEST_URI} !^/setap/public/
    RewriteRule ^(.*)$ public/$1 [L]
    
    # Permitir acceso a logs si viene desde debug
    RewriteCond %{REQUEST_URI} ^/setap/logs/
    RewriteCond %{HTTP_REFERER} /setap/debug/
    RewriteRule . - [L]
</IfModule>

# ===== CONFIGURACIÓN ESPECIAL PARA DEBUG =====
# Evitar listado de directorios (excepto debug temporalmente)
<Directory "/setap">
    Options -Indexes
</Directory>

<Directory "/setap/debug">
    # Permitir listado para debugging (eliminar después)
    Options +Indexes
    
    # Headers de seguridad específicos para debug
    Header always set X-Frame-Options SAMEORIGIN
    Header always set X-Content-Type-Options nosniff
    Header always set Cache-Control "no-cache, no-store, must-revalidate"
</Directory>

<Directory "/setap/logs">
    # Protección adicional para logs
    Header always set X-Frame-Options DENY
    Header always set X-Content-Type-Options nosniff
    
    # Solo permitir acceso desde IPs autorizadas (tu IP + localhost)
    <RequireAll>
        Require ip 127.0.0.1
        Require ip localhost
        Require ip TU_IP_PUBLICA_AQUI
    </RequireAll>
</Directory>

# ===== BLOQUEAR ACCESO A ARCHIVOS SENSIBLES =====
<FilesMatch "\.(env|ini|log|sh|bak|config|sql|htaccess_debug|htaccess_logs|htaccess_debug_optimized)$">
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
</FilesMatch>

# ===== PERMISOS ESPECIALES PARA DEBUG =====
# Permitir acceso a archivos PHP en carpeta debug
<Directory "/setap/debug">
    <Files "*.php">
        <RequireAll>
            # Permitir acceso solo desde IPs autorizadas
            Require ip 127.0.0.1
            Require ip localhost
            Require ip TU_IP_PUBLICA_AQUI
        </RequireAll>
    </Files>
</Directory>

# ===== CONFIGURACIÓN DE HEADERS PARA DEBUG =====
<IfModule mod_headers.c>
    # Headers de seguridad para toda la aplicación
    Header always set X-Frame-Options SAMEORIGIN
    Header always set X-Content-Type-Options nosniff
    Header always set X-XSS-Protection "1; mode=block"
    
    # Headers específicos para modo debug
    <Directory "/setap/debug">
        Header set X-Debug-Panel "enabled"
        Header unset X-Powered-By
    </Directory>
</IfModule>

# ===== PROTECCIÓN CONTRA ATAQUES =====
<IfModule mod_rewrite.c>
    # Bloquear intentos de acceso a archivos de sistema
    RewriteRule ^(.*)/(wp-config\.php|xmlrpc\.php|wp-login\.php|wp-admin/admin-ajax\.php)$ - [F,L]
    
    # Bloquear acceso a directorios sensibles
    RewriteRule ^(.*)/(vendor|cache|tests|docs)/?$ - [F,L]
    
    # Bloquear consultas SQL directas en URL
    RewriteCond %{QUERY_STRING} (\<|%3C).*script.*(\>|%3E) [NC,OR]
    RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} \<.+\> [OR]
    RewriteCond %{QUERY_STRING} (SELECT|INSERT|UPDATE|DELETE|DROP|CREATE) [NC,OR]
    RewriteCond %{QUERY_STRING} (UNION|SELECT|INSERT|UPDATE|DELETE|DROP|CREATE) [NC,OR]
    RewriteCond %{QUERY_STRING} concat [NC]
    RewriteRule ^(.*)$ - [F,L]
</IfModule>

# ===== CONFIGURACIÓN PARA LOGS =====
# Permitir acceso a logs solo desde el sistema
<Directory "/setap/logs">
    # Deshabilitar ejecución de PHP en logs
    <FilesMatch "\.php$">
        <RequireAll>
            Require all denied
        </RequireAll>
    </FilesMatch>
</Directory>

# PHP Handler - Activar según entorno
<IfModule mime_module>
  ## PHP Handler (production - cPanel EasyApache)
  #AddHandler application/x-httpd-ea-php83 .php .php8 .phtml
  
  # PHP Handler (local - Apache estándar Windows)
  AddHandler application/x-httpd-php .php .php8 .phtml
</IfModule>

# ===== CONFIGURACIÓN FINAL PARA DEBUG =====
# Añadir indicadores de modo debug (eliminar después)
<IfModule mod_headers.c>
    Header set X-Debug-Active "true"
    Header set X-Tools "web-debug-enabled"
</IfModule>

# ===== NOTA IMPORTANTE =====
# Después de terminar debugging:
# 1. Cambiar "Require ip TU_IP_PUBLICA_AQUI" por las IPs específicas que necesites
# 2. Restablecer "Options -Indexes" en /setap/debug
# 3. Eliminar headers de debug (X-Debug-*, X-Tools, etc.)
# 4. Eliminar o cambiar permisos especiales para carpeta logs/
# 5. Renombrar este archivo a .htaccess.production si quieres conservar backup
# 6. Eliminar carpeta /setap/debug/ completamente del servidor
{
    // --- PHP básico ---
    "php.validate.enable": true,
    "php.validate.executablePath": "C:/php/php.exe", // <- ajusta a tu ruta de PHP 8.3
    "php.executablePath": "C:/php/php.exe",          // compatibilidad con extensiones antiguas

    // --- Asociación de archivos ---
    "files.associations": {
        "*.php": "php",
        "*.sql": "sql",
        "*.css": "css",
        "*.js": "javascript",
        "*.json": "json"
    },

    // --- Intelephense ---
    "intelephense.environment.includePaths": [
        "${workspaceFolder}/src",
        "${workspaceFolder}/public"
    ],
    "intelephense.files.exclude": [
        "**/.git/**",
        "**/node_modules/**",
        "**/vendor/**/Tests/**",
        "**/vendor/**/docs/**",
        "**/cache/**",
        "**/logs/**"
    ],
    "intelephense.format.enable": true,
    "intelephense.diagnostics.enable": true,
    "intelephense.completion.insertDeclaration": true,
    "[php]": {
        "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
    },

    // --- Opcional: mejora de rendimiento ---
    "editor.formatOnSave": true,
    "editor.quickSuggestions": {
        "strings": true
    }
}
